@{
    ViewData["Title"] = "Home Page";
}


<html>


	<body class="fondo">
<!--Portada-->
<div class="text-center">
    <h1 class="recomendacion" >¡NUESTRAS RECOMENDACIONES! </h1>
      </div>
      
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/imagenes/titanic.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Titanic</h5>
        <p>Se hunde el barco y nuestros protagonistas se enamoran</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/imagenes/OrgulloYPrejuicio.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Orgullo Y Prejuicio</h5>
        <p>Del pasado no tiene usted que recordar lo más placentero</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/imagenes/hastaelultimohombre.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Hasta el último hombre</h5>
        <p>La Guerra no siempre es fría</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
  <br></br>

   <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4"> 
           
                
        @foreach(Pelicula peli in @ViewBag.Lista){
       
     <div class="card-peliculas" style="width: 18rem;">
  <img src="/imagenes/@peli.Foto" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title negrita">@peli.Nombre</h5>
    <p class="card-text">@peli.Sintesis</p>
 <a href='@Url.Action("VerDetallePelicula", "Home", new { IdPelicula = @peli.IdPelicula} )' class="btn btn-primary"> Ver Info Pelicula</a>
  </div>
</div>

            
            
    }
  
     </div>
 </div>

</body>
<html>