@{
    ViewData["Title"] = "VerInfoPelicula";
}


<html>


	<body class="fondo">


    <div class="text-center">
    <h1>@ViewBag.DatosPelicula.Nombre</h1>
    <p onclick="MeGustaPelicula(@ViewBag.DatosPelicula.IdPelicula)" class="btn  btn-sm btn-light">Me Gusta</p>
     <span id="likespelicula"> @ViewBag.DatosPelicula.CantLikes</span>
     <p onclick="ViewsPelicula(@ViewBag.DatosPelicula.IdPelicula)" class="btn  btn-sm btn-warning">La Vi</p>
     <span id="viewspelicula"> @ViewBag.DatosPelicula.CantViews</span>

    </div>

   <div class="delimitador">
<div class="contenedor">
<iframe src=@ViewBag.DatosPelicula.Trailer></iframe>
</div>
</div>

	<img class="fotoPeli"src="/imagenes/@ViewBag.DatosPelicula.Foto" >

 <h1 class="Director">Director: @ViewBag.DatosPelicula.Director</h1>
 <div class="jumbotron jumbotron-fluid">
  <div class="container fondoGris">
    <h1 class="display-4">Sinopsis</h1>
    <p class="datos">@ViewBag.DatosPelicula.Sintesis</p>

  </div>
</div>

  @foreach(Reseña res in @ViewBag.DatosReseña)
 {
  <img class="foto-perfil" src="@res.Foto" class="mr-3" alt="...">
  <div class="media-body">
  <h5 class="mt-0"> @res.NombreDelUsuario</h5>
  <h2 class="mt-0"> @res.Titulo</h2>
 <p class="ReseñaCont">@res.Contenido</p> 
  </div> 
    <a href='@Url.Action("EliminarReseña","Home",new{idReseña = @res.IdReseña, IdPelicula = @res.IdPelicula})'class="btn btn-danger" type="submit">Eliminar Reseña</a>
 
 
      
    <br> </br>
 }
<center><a href='@Url.Action("AgregarReseña","Home",new{IdPelicula = @ViewBag.DatosPelicula.IdPelicula})' class="btn btn-primary btn-lg">¡Escribir Reseña!</a>
</center>
 
</body>
	
<html>
